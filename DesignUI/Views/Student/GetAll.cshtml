@{
}

@model List<DesignUI.Models.StudentModel>

<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
              integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
              crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <a href="Add">Add new student</a>
        <table id="example" class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DesignUI.Models.StudentModel data in Model)
            {

                <tr>
                    <td> @data.FirstName </td>
                    <td> @data.LastName </td>
                    <td> @data.Email </td>
                    <td>
                        <a asp-controller="Student" asp-action="Edit" asp-route-Id="@data.StudentId">
                            <i class="fa-solid fa-pen"></i> edit
                        </a>
                        <a asp-controller="Student" asp-action="Delete" asp-route-Id="@data.StudentId">
                            <i class="fa-solid fa-trash"></i> delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>
</html>